[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache

ignore =
    E203,
    E501,
    W503,
    W504

select = E,W,F,C
show-source = True
show-pep8 = True
count = True
statistics = True
